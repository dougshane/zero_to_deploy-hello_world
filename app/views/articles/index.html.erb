<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= article.id %>
      <%= link_to article.title, article_path(article) %>
      <%= article.body %>
      <%= article.created_at %>
      <%= article.updated_at %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a New Article", new_article_path, class: 'new_article' %>
